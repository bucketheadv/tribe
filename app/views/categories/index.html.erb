<% breadcrumb :categories %>
<div class="example" > <!-- data-text="Categories" -->
  <div class="grid no-margin-top">
    <% @categories.each_slice(@row_count).each do |group| %>
      <div class="row cells<%= @row_count %>">
      <% group.each do |category| %>
        <div class="cell">
          <h4><%= category.name %></h4>
          <div class="image-container">
            <div class="frame">
              <a href="<%= articles_path(category_id: category.id) %>"><%= image_tag(category.image_url(:normal)) %></a>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
$(function() {
    $(".image-container").hover(function() {
      $(this).addClass("element-selected");
    }, function() {
      $(this).removeClass("element-selected");
    });
});
</script>
