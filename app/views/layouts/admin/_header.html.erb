<div class="app-bar fixed-top" data-role="appbar">
  <a class="app-bar-element branding" href="<%= admin_articles_path %>"><%= t('site.admin.name') %></a>
  <span class="app-bar-divider"></span>
  <ul class="app-bar-menu">
    <li data-flexorderorigin="0" data-flexorder="1">
    </li>
  </ul>
  <div class="app-bar-element place-right active-container">
    <span class="dropdown-toggle">
      <span class="mif-cog"></span>
      <%= current_user.email %>
    </span>
    <div class="app-bar-drop-container padding10 place-right no-margin-top block-shadow fg-dark" style="width: 220px; display: none;" data-no-close="true" data-role="dropdown">
      <ul class="unstyled-list fg-dark">
        <li>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'fg-white1 fg-hover-yellow'%>
        </li>
      </ul>
    </div>
    <div class="app-bar-pullbutton automatic" style="display: none;"></div>
    <nav class="app-bar-pullmenu hidden fixstyle-app-bar-menu" style="display: none;">
      <ul class="app-bar-pullmenubar hidden app-bar-menu"></ul>
    </nav>
  </div>
</div>
