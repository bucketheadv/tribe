<div class="example">
  <%= form_for [:admin, @article] do |f| %>
    <div class="grid">
      <%= f.label :title %>
      <div class="input-control text full-size">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="grid">
      <%= f.label :category %>
      <div class="input-control select">
        <%= f.select :category, categories_for_select %>
      </div>
    </div>
    <div class="grid">
      <%= f.label :body %>
      <div class="input-control textarea full-size">
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="grid">
      <%= f.label :publish_status %>
      <%= f.check_box :publish_status %>
    </div>
    <div class="grid">
      <%= f.submit %>
    </div>
  <% end %>
</div>
