<% breadcrumb :articles %>
<div class='articles'>
  <div class="content">
    <% @articles.each do |article| %>
      <div class="example"> <!-- data-text="blockquote" -->
      <blockquote>
        <p>
        <%= link_to article.title, article %>
        </p>
        <small>
          发布于 
          <cite><%= time_ago_in_words(article.created_at) %></cite>
        </small>
      </blockquote>
      <hr class='thin'></hr>
    </div>
  <% end %>
  </div>
</div>

<%= paginate @articles, outer_window: 3 %>
